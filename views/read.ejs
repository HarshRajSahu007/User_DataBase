<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen w-full bg-zinc-900 p-10">
        <div class="nav">
            <a class="text-blue-200" href="/">Home</a>
        </div>
        <h1 class="text-3xl mt-10 tracking-tighter text-white mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length>0){ %>
                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-green-400 overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tighter mt-3 text-blue-200"><%= user.name%></h3>
                        <h5 class="text-blue-400"><%=user.email %></h5>
                        <div class="flex gap-3"></div>
                        <a class="text-zinc-200 mt-6 mr-20 border-2 border-zinc-400 rounded-lg" href="/edit/<%= user._id %>">Edit</a>
                        <a class="text-red-600 border-2 border-zinc-400 rounded-lg" href="/delete/<%= user._id %>">Delete</a>
                    </div>
             <%   }) %>
            <% } else { %>
                <h1 class="text-white">NO USERS</h1>
            <% } %>
        </div>
    </div>
</body>
</html>